<% include partials/header%>
<div class="container">
    <div>
       <h1 style="text-align:center">Create New Image</h1>
    </div>
    <div style="width: 30%;margin:40px auto;">

        <form action="/gallaries" method="POST">

            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button>
            </div>
        </form>
        <a href="/gallaries">Go Back</a>
    </div>
</div>
<% include partials/footer%>